@model QuizLet.Models.Question

@{
    ViewData["Title"] = "Question";
}

<h2>Question</h2>

<div>
    <h4>Question</h4>
    <p>
        @Model.QuestionText
    </p>

    @for (int i = 0; i < Model.Answers.Length; i++)
    {
        <p>
            <a href="\Quiz\Answer\@Model.Id\@i">@(i+1). @Model.Answers[i]</a>
        </p>
    }
 </div>
